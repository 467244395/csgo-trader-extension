{
  "manifest_version": 2,
  "name": "CSGO Trader",
  "short_name": "CST",
  "version": "1.0",
  "description": "Chrome Extension to help with CS:GO trading",
  "homepage_url": "https://github.com/bladegery/csgo-trader-extension",
  "permissions": ["activeTab", "declarativeContent", "storage", "*://steamcommunity.com/*", "webRequest", "webRequestBlocking", "tabs"],
  "options_page": "html/options.html",
  "background": {
    "scripts": ["js/thirdparty/jquery-3.3.1.min.js", "js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://steamcommunity.com/*/inventory", "*://steamcommunity.com/*/inventory/*"],
      "run_at" : "document_idle",
      "js": ["js/thirdparty/jquery-3.3.1.min.js", "js/inventory.js"],
      "css": ["/css/inventory.css"]
    }
  ],
  "page_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/cstlogo16.png",
      "32": "images/cstlogo32.png",
      "48": "images/cstlogo48.png",
      "128": "images/cstlogo128.png"
    }
  },
  "icons": {
    "16": "images/cstlogo16.png",
    "32": "images/cstlogo32.png",
    "48": "images/cstlogo48.png",
    "128": "images/cstlogo128.png"
  }
}